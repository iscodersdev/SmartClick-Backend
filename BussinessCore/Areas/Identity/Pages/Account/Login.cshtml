@page
@model LoginModel

@{
    ViewData["Title"] = "Ingresar al Sistema";
}


<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <p class="login-box-msg">@ViewBag.Title</p>
    <div class="form-group has-feedback">
        <input asp-for="Input.Email" class="form-control" placeholder="Nombre de Usuario" />
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group has-feedback">
        <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-xs-8">
            <div class="icheck-material-grey">
                <input data-val="true" data-val-required="The Remember me? field is required." id="RememberMe" name="RememberMe" type="checkbox" value="true" /><input name="RememberMe" type="hidden" value="false">
                <label for="RememberMe" class="" style="color: white;">
                    Recuerdame
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Ingresar</button>
        </div>
        <!-- /.col -->
    </div>
    @*<a asp-page="./ForgotPassword">Recuperar Constraseña</a> <br />*@
</form>


<partial name="_ValidationScriptsPartial" />