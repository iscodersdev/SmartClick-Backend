@using Commons.HtmlHelpers
@model DAL.Models.Core.SubProducto
@{
    ViewData["Title"] = "Borrar SubProducto: " + Model.NombreSubProducto;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="DeleteSubProducto" asp-antiforgery="true">
            @using (Html.BoxDefault(BoxColor.Info))
            {
                using (Html.BoxBody())
                {
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="NombreSubProducto" class="control-label"></label>
                                <input asp-for="NombreSubProducto" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                }
                using (Html.BoxFooter())
                {
                    <a data-dismiss="modal" class="btn btn-default">Cancelar</a>
                    <input type="submit" value="Borrar" class="btn btn-danger pull-right" />
                }
            }
        </form>
    </div>
</div>
