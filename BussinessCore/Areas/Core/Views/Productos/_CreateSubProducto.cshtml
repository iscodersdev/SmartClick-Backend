@using Commons.HtmlHelpers
@model DAL.Models.Core.SubProducto
@{
    ViewData["Title"] = "Crear SubProducto";
}    
<div class="row">
    <div class="col-md-12">
        <form asp-action="_CreateSubProducto" asp-antiforgery="true">
            @using (Html.BoxDefault(BoxColor.Info))
            {
                using (Html.BoxHeader("Información")) { }
                @using (Html.BoxBody())
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Producto.Id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="NombreSubProducto" class="control-label"></label>
                                <input asp-for="NombreSubProducto" class="form-control" />
                                <span asp-validation-for="NombreSubProducto" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }
                @using (Html.BoxFooter())
                {
                    <a class="btn btn-default" data-dismiss="modal">Cancelar</a>
                    <input type="submit" value="Guardar" class="btn btn-primary pull-right" />
                }
            }
        </form>
    </div>
</div>