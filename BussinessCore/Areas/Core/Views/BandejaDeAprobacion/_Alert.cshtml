<form method="post" asp-area="Core" asp-controller="BandejaDeAprobacion" asp-action="@ViewBag.Action">
    <div class="box-body" style="text-align-last: center;">
        <input type="hidden" name="id" value="@ViewBag.PrestamoId" />
        <h3>@ViewBag.Texto</h3>
    </div>
    <div class="box-footer">
        <a class="btn btn-danger" data-dismiss="modal">Cancelar</a>
        <button type="submit" class="btn btn-success pull-right">Aceptar</button>
    </div>    
</form>