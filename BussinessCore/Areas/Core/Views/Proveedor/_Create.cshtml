@using Commons.HtmlHelpers
@model DAL.DTOs.ProveedorDTO
@{
    ViewData["Title"] = "Crear Proveedor";
}    
<div class="row">
    <div class="col-md-12">
        <form asp-action="_Create" asp-antiforgery="true">
            @using (Html.BoxDefault(BoxColor.Info))
            {
                using (Html.BoxHeader("Información")) { }
                @using (Html.BoxBody())
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CUIT" class="control-label"></label>
                                <input asp-for="CUIT" class="form-control" />
                                <span asp-validation-for="CUIT" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="RazonSocial" class="control-label"></label>
                                <input asp-for="RazonSocial" class="form-control" />
                                <span asp-validation-for="RazonSocial" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Domicilio" class="control-label"></label>
                                <input asp-for="Domicilio" class="form-control" />
                                <span asp-validation-for="Domicilio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="EmpresaId" class="control-label"></label>
                                <select asp-items="Model.Empresas" asp-for="EmpresaId" class="form-control" title="Seleccione la Empresa" searchable="true"></select>
                                <span asp-validation-for="EmpresaId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RubrosSeleccionados" class="control-label"></label>
                                <select asp-items="Model.Rubros" asp-for="RubrosSeleccionados" class="form-control" title="Seleccione los Rubros" searchable="true" multiple></select>
                                <span asp-validation-for="RubrosSeleccionados" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                }
                @using (Html.BoxFooter())
                {
                    <a class="btn btn-default" asp-action="Index">Cancelar</a>
                    <input type="submit" value="Guardar" class="btn btn-primary pull-right" />
                }
            }
        </form>
    </div>
</div>