@using Commons.HtmlHelpers
@model DAL.DTOs.ProveedorDTO
@{
    ViewData["Title"] = "Borrar Proveedor: " + Model.Nombre;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete" asp-antiforgery="true">
            @using (Html.BoxDefault(BoxColor.Info))
            {
                using (Html.BoxBody())
                {
                    <input type="hidden" asp-for="ProveedorId" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" disabled/>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CUIT" class="control-label"></label>
                                <input asp-for="CUIT" class="form-control" disabled/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="RazonSocial" class="control-label"></label>
                                <input asp-for="RazonSocial" class="form-control" disabled/>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Domicilio" class="control-label"></label>
                                <input asp-for="Domicilio" class="form-control" disabled/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="EmpresaId" class="control-label"></label>
                                <select asp-items="Model.Empresas" asp-for="EmpresaId" class="form-control" title="Seleccione la Empresa" disabled></select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RubrosSeleccionados" class="control-label"></label>
                                <select asp-items="Model.Rubros" asp-for="RubrosSeleccionados" class="form-control" title="Seleccione los Rubros" multiple disabled></select>
                            </div>
                        </div>
                    </div>
                }
                using (Html.BoxFooter())
                {
                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                    <input type="submit" value="Borrar" class="btn btn-danger pull-right" />
                }
            }
        </form>
    </div>
</div>
