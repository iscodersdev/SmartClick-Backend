@using Commons.HtmlHelpers
@model DAL.Models.Core.Inversor
@{
    ViewData["Title"] = "Borrar Inversor: " + Model.Nombre;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete">
            @using (Html.BoxDefault(BoxColor.Info))
            {
                using (Html.BoxHeader("Datos de Inversor")) { }
                using (Html.BoxBody())
                {
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Domicilio" class="control-label"></label>
                        <input asp-for="Domicilio" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="CUIT" class="control-label"></label>
                        <input asp-for="CUIT" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="TasaActual.Tasa" class="control-label"></label>
                        <input asp-for="TasaActual.Tasa" class="form-control" disabled />
                    </div>
                    <div class="col-md-3">
                        <br/><label asp-for="FirmaReporte" class="control-label"></label>
                        <input type="checkbox" asp-for="FirmaReporte" class="form-control" disabled />
                    </div>
                }
                using (Html.BoxFooter())
                {
                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                    <input type="submit" value="Borrar" class="btn btn-primary pull-right" />
                }
            }
        </form>
    </div>
</div>
